{{#section 'head'}}
  <link rel="stylesheet" type="text/css" href="/css/editBook.css" />
  <link rel="stylesheet" type="text/css" href="/css/navbar.css" />
{{/section}}
{{> navbar}}
<h1 class="header" id="one">Edit book</h1>
<form action="/book/new" method="post" class="basicForm">
  <small
  style="display: {{choose invalidErrDisplay 'none'}}; color: red"
  class="center"
  >
    Invalid input, please check your fields and try again.
  </small>
  <small
  style="display: {{choose successDisplay 'none'}}; color: green"
  class="center"
  >
    Book added successfully.
  </small>
  <label for="title">Book title</label>
  <input type="text" name="title" id="title" value="{{choose book.title ''}}">
  <label for="summary">Summary</label>
  <textarea name="summary" id="summary" cols="30" rows="10" value="{{choose book.summary ''}}"></textarea>
  <label for="isbn">ISBN</label>
  <input type="text" name="isbn" id="isbn" value="{{choose book.isbn ''}}">
  <label for="authorName">Author name</label>
  <input type="text" name="authorName" id="authorName" value="{{choose book.authorName ''}}">
  <label for="authorSurname">Author surname</label>
  <input type="text" name="authorSurname" id="authorSurname" value="{{choose book.authorSurname ''}}">
  <button type="submit">Add</button>
</form>
